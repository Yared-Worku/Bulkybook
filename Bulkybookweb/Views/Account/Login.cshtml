@model Bulkybookweb.Models.Signin

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h3 class="fw-bold mb-0">Welcome Back</h3>
            <p class="small opacity-75">Please enter your details to sign in</p>
        </div>
        <div class="auth-body">
            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 small mb-3 border-0 rounded-3">
                    <i class="bi bi-exclamation-circle-fill me-2"></i>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold small">Username</label>
                    <div class="input-group auth-input-group">
                        <span class="input-group-text"><i class="bi bi-person"></i></span> <input asp-for="Username" class="form-control auth-input" placeholder="Enter your username" />
                    </div>
                    <span asp-validation-for="Username" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <label class="form-label fw-semibold small">Password</label>
                        <a href="#" class="text-decoration-none small fw-bold">Forgot?</a>
                    </div>
                    <div class="input-group auth-input-group">
                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                        <input asp-for="Password" type="password" class="form-control auth-input" placeholder="••••••••" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="form-check mb-4">
                    <input class="form-check-input" type="checkbox" id="remember">
                    <label class="form-check-label small text-muted" for="remember">
                        Remember me
                    </label>
                </div>

                <button type="submit" class="category-btn-edit btn-auth">
                    Sign In <i class="bi bi-arrow-right ms-2"></i>
                </button>

                <div class="text-center mt-4">
                    <p class="small text-muted">Don't have an account? 
                        <a asp-action="Register" class="text-primary fw-bold text-decoration-none">Sign Up</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>
