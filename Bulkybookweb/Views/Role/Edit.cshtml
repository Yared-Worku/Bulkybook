@model Bulkybookweb.Models.Roles

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-header category-header d-flex justify-content-between align-items-center rounded-top-4">
                    <div class="d-flex align-items-center justify-content-center">
                        <i class="bi bi-pencil-square  me-2"></i>
                        <span class="mb-0 fw-bold">Edit Role</span>
                    </div>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-semibold text-secondary">Role Name</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-shield-lock text-primary"></i>
                                </span>
                                <input asp-for="Name" class="form-control border-start-0 ps-0" placeholder="e.g. Content Manager" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="row mb-4">
      
                            <div class="col-6 text-end">
                                <label class="small text-muted mb-1">Role Status</label>
                                <div>
                                    <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25">
                                        Active
                                    </span>
                                </div>
                            </div>
                        </div>

                        <hr class="text-muted opacity-25" />

                        <div class="d-flex gap-2 pt-2">
                          
                            <button type="submit" class="btn btn-success px-4 rounded-pill fw-bold w-100">
                                <i class="bi bi-check-circle me-2"></i> Save
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill w-100">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <p class="text-center mt-3 text-muted small">
                Editing this name will update permissions for all users assigned to this role.
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}