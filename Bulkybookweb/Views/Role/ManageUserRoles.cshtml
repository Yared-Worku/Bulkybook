@model Bulkybookweb.Models.RoleUserAssignmentViewModel

<div class="card border-0 shadow-sm rounded-4">
    <div class="card-header category-header d-flex justify-content-between align-items-center rounded-top-4">
        <span>
            <i class="bi bi-person-gear fs-3 me-2"></i> Assign Users to: @Model.RoleName
        </span>
        <p class=" small">Toggle switches to add or remove users from this role.</p>
    </div>

    <form asp-action="ManageUserRoles" method="post">
        <input type="hidden" asp-for="RoleId" />
        <input type="hidden" asp-for="RoleName" />

        <div class="card-body px-4">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="bg-light">
                        <tr>
                            <th>User Name</th>
                            <th class="text-center">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Users.Count; i++)
                        {
                            <tr>
                                <td>
                                    <span class="fw-semibold">@Model.Users[i].UserName</span>
                                    <input type="hidden" asp-for="@Model.Users[i].UserId" />
                                    <input type="hidden" asp-for="@Model.Users[i].UserName" />
                                </td>
                                <td class="text-center">
                                    <div class="form-check form-switch d-inline-block">
                                        <input class="form-check-input" type="checkbox" asp-for="@Model.Users[i].IsSelected" role="switch">
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer bg-white border-0 d-flex justify-content-end pb-4 px-4">
            <a asp-action="Index" class="btn category-btn-back rounded-pill me-2 px-4">Back to List</a>
            <button type="submit" class="btn btn-success rounded-pill px-4 fw-bold shadow-sm">Save</button>
        </div>
    </form>
</div>