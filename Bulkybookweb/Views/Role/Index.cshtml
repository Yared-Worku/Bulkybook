@model IEnumerable<Bulkybookweb.Models.RoleIndexViewModel>

<div class="container-fluid py-4">
    <div class="card-header category-header d-flex justify-content-between align-items-center rounded-top-4">
        <div>
            <span class="sidebar-icon">
                <i class="bi bi-shield-lock"></i>
            </span>
            <span class="mb-0"> Role Management</span>
        </div>
        <a asp-action="Create" class="category-btn-create btn-sm fw-bold text-decoration-none">
            <i class="bi bi-plus-circle me-2"></i> Add New
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary">
                        <tr>
                            <th class="ps-4 py-3 border-0 text-uppercase small fw-bold" style="width: 25%;">Role Name</th>
                            <th class="py-3 border-0 text-uppercase small fw-bold text-center">Assigned Users</th>
                            <th class="py-3 border-0 text-uppercase small fw-bold text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary bg-opacity-10 text-primary rounded-3 p-2 me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                            <i class="bi bi-shield-check fs-5"></i>
                                        </div>
                                        <div>
                                            <span class="fw-bold d-block text-dark">@role.RoleName</span>
                                            <span class="text-success extra-small fw-semibold">
                                                <i class="bi bi-dot"></i> Active Role
                                            </span>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center">
                                    @if (role.UserNames.Any())
                                    {
                                        <div class="d-flex flex-wrap justify-content-center gap-1">
                                            @foreach (var user in role.UserNames.Take(3))
                                            {
                                                <span class="badge rounded-pill bg-info bg-opacity-10 text-info border border-info border-opacity-25 px-2 py-1">
                                                    <i class="bi bi-person-fill small me-1"></i> @user
                                                </span>
                                            }
                                            @if (role.UserNames.Count > 3)
                                            {
                                                <span class="badge rounded-pill bg-secondary bg-opacity-10 text-secondary border px-2 py-1">
                                                    +@(role.UserNames.Count - 3) more
                                                </span>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted small italic">No users assigned</span>
                                    }
                                </td>

                                <td class="text-end pe-4">
                                    @{
                                        bool isSuperAdmin = role.RoleName == "SuperAdmin";
                                    }
                                    <div class="btn-group shadow-sm rounded-pill overflow-hidden">
                                        @if (isSuperAdmin)
                                        {                            
                                        <a asp-action="ManageUserRoles" asp-route-id="@role.RoleId"
                                               class="btn btn-outline-warning btn-sm px-3 border-0" title="Manage Users">
                                            <i class="bi bi-people-fill"></i>
                                        </a>
                                            <a class="btn btn-light btn-sm px-3 border-0 text-muted" title="System Core Role Protected" disabled>
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <button class="btn btn-light btn-sm px-3 border-0 text-muted" title="Cannot Delete System Core" disabled>
                                                <i class="bi bi-trash3"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <a asp-action="ManageUserRoles" asp-route-id="@role.RoleId"
                                               class="btn btn-outline-warning btn-sm px-3 border-0" title="Manage Users">
                                                <i class="bi bi-people-fill"></i>
                                            </a>
                                            <a asp-controller="Role" asp-action="Edit" asp-route-id="@role.RoleId"
                                               class="btn btn-outline-primary btn-sm px-3 border-0" title="Edit Role">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-danger btn-sm px-3 border-0"
                                                    onclick="confirmDelete('@role.RoleId')" title="Delete Role">
                                                <i class="bi bi-trash3"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-center mt-4 mb-3">
                <nav aria-label="Role navigation">
                    <ul class="pagination custom-pagination">
                        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="1">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)">
                                <span aria-hidden="true">&lsaquo;</span>
                            </a>
                        </li>

                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                            </li>
                        }

                        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)">
                                <span aria-hidden="true">&rsaquo;</span>
                            </a>
                        </li>
                        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@ViewBag.TotalPages">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
        <div class="card-footer bg-white border-0 py-3 text-center">
            <small class="text-muted">System contains <strong>@Model.Count()</strong> distinct security levels on this page.</small>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmDelete(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch('/Role/DeleteRole/' + id, {
                        method: 'POST',
                        headers: {
                            'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                        }
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire('Deleted!', data.message, 'success')
                            .then(() => {
                                location.reload();
                            });
                        } else {
                            Swal.fire('Error!', data.message, 'error');
                        }
                    })
                    .catch(error => {
                        Swal.fire('Error!', 'Something went wrong on the server.', 'error');
                    });
                }
            })
        }
    </script>
}