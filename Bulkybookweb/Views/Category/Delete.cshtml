@model Bulkybookweb.Models.Category
@{
    ViewData["Title"] = "Delete Category";
}

<div class="container my-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-4" style="max-width: 500px; width: 100%;">
        <div class="card-header bg-danger text-white text-center rounded-top-4 py-3">
            <h4 class="mb-0 fw-bold">
                🗑 Confirm Deletion 
            </h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <p class="fs-5 text-center mb-4">
                    Are you sure you want to delete the category:
                    <strong class="text-danger">@Model.Name</strong>?
                </p>

                <div class="d-flex justify-content-center gap-3">
                    <a asp-action="Index"
                       class="btn btn-outline-secondary px-4 py-2 fw-semibold rounded-pill transition">
                        No
                    </a>
                    <button type="submit"
                            class="btn btn-danger px-4 py-2 fw-semibold rounded-pill transition">
                        Yes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
