@model Bulkybookweb.Models.Category
@{
    ViewData["Title"] = "Create Category";
}

<div class="card category-card">
    <div class="card-header bg-dark text-white rounded-top-4">
        <h4 class="mb-0">➕ Create New Category</h4>
    </div>

    <div class="card-body">
        <form asp-action="Create" method="post" class="category-form">
            @* <div asp-validation-summary="All"></div> *@
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter category name" required/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DisplayOrder" class="form-label"></label>
                <input asp-for="DisplayOrder" type="number" class="form-control" placeholder="Enter display order" required/>
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn category-btn-back">⬅ Back to List</a>
                <button type="submit" class="btn category-btn-create">💾 Create</button>
            </div>

        </form>
    </div>
</div>
@section Scripts {
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}