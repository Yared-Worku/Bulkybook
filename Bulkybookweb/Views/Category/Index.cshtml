@model List<Bulkybookweb.Models.Category>
@{
    ViewData["Title"] = "Categories";
}
<div class="card category-card">

    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center rounded-top-4">
        <h4 class="mb-0">📂 Category List</h4>
        <a asp-controller="Category" asp-action="Create" class="category-btn-create btn-sm fw-bold text-decoration-none">
            <i class="bi bi-plus-circle"></i> + Create New
        </a>
    </div>

    <div class="card-body">

        <div class="table-responsive">
            <table class="table category-table table-hover align-middle">
                <thead>
                    <tr>
                        @* <th>ID</th> *@
                        <th>Name</th>
                        <th>Display Order</th>
                        <th>Created Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            @* <td class="fw-semibold text-center">@item.Id</td> *@
                            <td class="text-center">@item.Name</td>
                            <td class="text-center">
                                <span class="badge bg-primary">@item.DisplayOrder</span>
                            </td>
                            <td class="text-center">@item.CreatedDateTime.ToString("dd MMM yyyy")</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm category-btn-edit me-1">✏ Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm category-btn-delete">
                                    🗑 Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
