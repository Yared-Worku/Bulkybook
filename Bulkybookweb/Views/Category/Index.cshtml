@model List<Bulkybookweb.Models.Category>
@{
    ViewData["Title"] = "Categories";
}
@using System.Security.Claims
@{
    var loggedInUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
    bool isPrivilegedUser = User.IsInRole("Admin") || User.IsInRole("SuperAdmin");
}
<div class="card category-card">

    <div class="card-header category-header d-flex justify-content-between align-items-center rounded-top-4">
        <div>
        <span class="sidebar-icon">
            <i class="bi bi-folder2-open"></i>
            </span>
        <span class="sidebar-text">Category list</span>
        </div>
        <a asp-controller="Category" asp-action="Create" class="category-btn-create btn-sm fw-bold text-decoration-none">
            <i class="bi bi-plus-circle me-2"></i> Add New
        </a>
    </div>

    <div class="card-body">

        <div class="table-responsive">
            <table class="table category-table table-hover align-middle">
                <thead>
                    <tr>
                        @* <th>ID</th> *@
                        <th>Name</th>
                        <th>Display Order</th>
                        <th>Created By</th>
                        <th>Created Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>

                            <td class="text-center">@item.Name</td>
                            <td class="text-center">
                                <span class="badge bg-primary">@item.DisplayOrder</span>
                            </td>
                            <td class="text-center">
                                @if (item.Creator != null)
                                {
                                    <span>@item.Creator.FName @item.Creator.LName</span>
                                }
                                else
                                {
                                    <span class="text-muted">System</span>
                                }
                            </td>
                            <td class="text-center">@item.CreatedDateTime.ToString("dd MMM yyyy")</td>
                            <td class="text-center">
                                <div class="btn-group shadow-sm rounded-pill overflow-hidden">

                                    @if (isPrivilegedUser || (item.CreatedBy != null && item.CreatedBy.ToString() == loggedInUserId))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.CategoryCode"
                                           class="btn btn-outline-primary btn-sm px-3" title="Edit category">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>

                                        <a asp-action="Delete" asp-route-id="@item.CategoryCode"
                                           class="btn btn-outline-danger btn-sm px-3"
                                           onclick="confirmDelete('@item.CategoryCode')" title="Delete category">
                                            <i class="bi bi-trash3"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <button type="button"
                                                onclick="showDenialNotify()"
                                                class="btn btn-outline-secondary btn-sm px-3 opacity-50"
                                                style="cursor: not-allowed;">
                                            <i class="bi bi-pencil-square"></i>
                                        </button>

                                        <button type="button"
                                                onclick="showDenialNotify()"
                                                class="btn btn-outline-secondary btn-sm px-3 opacity-50"
                                                style="cursor: not-allowed;">
                                            <i class="bi bi-trash3"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                          
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="d-flex justify-content-center mt-4 mb-3">
            <nav aria-label="User navigation">
                <ul class="pagination custom-pagination">

                    <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="1">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>

                    <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)">
                            <span aria-hidden="true">&lsaquo;</span>
                        </a>
                    </li>

                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                        </li>
                    }

                    <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)">
                            <span aria-hidden="true">&rsaquo;</span>
                        </a>
                    </li>

                    <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@ViewBag.TotalPages">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>
<script>
    function showDenialNotify() {
        Swal.fire({
            icon: 'error',
            title: 'Permission Denied',
            text: 'You can only edit or delete your own category!',
            confirmButtonColor: '#3085d6', 
            footer: '<span class="text-muted">Note: Only Admins have full access.</span>'
        });
    }
</script>